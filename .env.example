# OpenCode Environment Configuration

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3000
API_KEY=your-secret-api-key-change-this

# ==========================================
# DATABASE
# ==========================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://opencode:opencode@localhost:5432/opencode_prod
DB_USER=opencode
DB_PASSWORD=opencode
DB_NAME=opencode_prod

# ==========================================
# CORS & SECURITY
# ==========================================
# Allow requests from these origins
CORS_ORIGIN=https://your-domain.com,http://localhost:3001

# ==========================================
# LLM / AI PROVIDERS
# ==========================================
# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx

# Other providers as needed
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn

# ==========================================
# STORAGE / CDN
# ==========================================
# AWS S3 (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=opencode-bucket

# ==========================================
# FEATURES
# ==========================================
ENABLE_REGISTRATION=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_API_DOCS=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15m

# ==========================================
# DEPLOYMENT
# ==========================================
# Railway
RAILWAY_ENVIRONMENT_ID=your-railway-env-id

# Vercel
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# ==========================================
# DOCKER COMPOSE
# ==========================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE=opencode:latest
